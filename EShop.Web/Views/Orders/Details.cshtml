@model EShop.Domain.Domain.Order

<div class="container">
    <div>
        <p>Order for @Model.Owner.UserName</p>
    </div>

    @for(int i=0;i<Model.FoodItemsInOrder.Count(); i++)
    {
        var item = Model.FoodItemsInOrder.ElementAt(i).FoodItem;
        if(i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 m-4">

            <div class="card" style="width: 18rem; height: 35rem">
                <img class="card-img-top" src="@item.FoodImage" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.FoodName</h5>
                    <p class="card-text">@item.FoodDescription</p>
                    <h6>Price: @item.Price</h6>
                </div>

            </div>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }
     <div>
                                   
      <a asp-action="Index" class="btn btn-primary" >Back to Orders</a>
                           
      </div>
   
</div>