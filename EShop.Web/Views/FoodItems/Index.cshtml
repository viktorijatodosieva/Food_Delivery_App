@model List<EShop.Domain.Domain.FoodItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Food items</h1>

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="FoodItems" asp-action="Create">Add new food item</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        if (i % 3 == 0)
        {
            @:<div class="row">
        }
            <div class="col-3 m-4">
                <div class="card" style="width: 18rem; height: 35rem">
                    <img class="card-img-top" src="@item.FoodImage" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.FoodName</h5>
                        <p class="card-text">@item.FoodDescription</p>
                        <p class="card-text">Restaurant: @item.Restaurant?.RestaurantName</p>
                        <h6>Price: @item.Price</h6>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="FoodItems" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-controller="FoodItems" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        <a asp-controller="FoodItems" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        <a asp-controller="FoodItems" asp-action="AddProductToCart" asp-route-id="@item.Id" class="btn btn-info">Add to Cart</a>
                    </div>
                </div>
            </div>

        if (i % 3 == 2)
        {
            @:</div>
        }
    }
</div>
